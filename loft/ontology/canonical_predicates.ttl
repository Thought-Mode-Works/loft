    loft:domain "adverse_possession" .

<https://loft.legal/domains/adverse_possession/taxes_paid> a canon:DomainPredicate ;
    rdfs:label "taxes_paid (adverse_possession)" ;
    canon:mapsTo canon:taxes_payment ;
    loft:domain "adverse_possession" .

<https://loft.legal/domains/adverse_possession/enforceable> a canon:DomainPredicate ;
    rdfs:label "enforceable (adverse_possession)" ;
