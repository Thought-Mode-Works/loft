# Dockerfile for LOFT Autonomous Test Harness
#
# Build:
#   docker build -f Dockerfile.autonomous -t loft-autonomous .
#
# Run:
#   docker run -v $(pwd)/data:/data -v $(pwd)/datasets:/datasets \
#     -e ANTHROPIC_API_KEY=$ANTHROPIC_API_KEY \
#     loft-autonomous start --dataset /datasets/contracts/ --duration 4h

FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    cmake \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml ./
COPY README.md ./
COPY loft/ ./loft/

# Install Python dependencies
RUN pip install --no-cache-dir -e ".[dev]"

# Create data directories
RUN mkdir -p /data/autonomous_runs /data/checkpoints /data/datasets

# Create non-root user for security
RUN useradd -m -s /bin/bash loft && \
    chown -R loft:loft /app /data

USER loft

# Health check for Docker orchestration
HEALTHCHECK --interval=60s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Expose health check port
EXPOSE 8080

# Set default entrypoint to the autonomous CLI
ENTRYPOINT ["python", "-m", "loft.autonomous.cli"]
CMD ["--help"]
